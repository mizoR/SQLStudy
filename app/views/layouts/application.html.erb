<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta name="description" content="A layout example with a side menu that hides on mobile, just like the Pure website.">
  <title><%= title = yield(:title); title.present? ? "#{title} | #{base_title}" : base_title %></title>
  <%= favicon_link_tag 'favicon.png' %>
  <%= stylesheet_link_tag "application" %>
</head>
<body>
  <div id="layout">
    <!-- Menu toggle -->
    <a href="#menu" id="menuLink" class="menu-link">
      <!-- Hamburger icon -->
      <span></span>
    </a>

    <div id="menu">
      <div class="pure-menu">
        <a class="pure-menu-heading" href="/">SQL Study</a>
        <ul class="pure-menu-list">
          <li class="pure-menu-item <%= 'pure-menu-selected' if current_page?(case_path) %>"><%= link_to 'CASE 式', case_path, class: 'pure-menu-link' %></li>
          <li class="pure-menu-item <%= 'pure-menu-selected' if current_page?(self_adopted_path) %>"><%= link_to '自己結合', self_adopted_path, class: 'pure-menu-link' %></li>
          <li class="pure-menu-item <%= 'pure-menu-selected' if current_page?(having_path) %>"><%= link_to 'HAVING 句', having_path, class: 'pure-menu-link' %></li>
        </ul>
      </div>
    </div>

    <div id="main">
      <div class="header">
        <h1><%= title = yield(:title); title.present? ? title : base_title %></h1>
      </div>

      <div class="content">
        <%= yield %>
      </div>
    </div>
  </div>
  <%= javascript_include_tag "application" %>
</body>
</html>
